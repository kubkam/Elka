@page "{courseId:int}"
@model Elka.Pages.Courses.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editing @Model.Course.Name</h2>

<form method="post">

	<input type="hidden" asp-for="Course.Id" />
	<div class="form-group">
		<label asp-for="Course.Name">Course's Name</label>
		<input asp-for="Course.Name" class="form-control" />
		<span class="text-danger" asp-validation-for="Course.Name"></span>
	</div>
	<div class="form-group">
		<label asp-for="Course.Moniker">Course's Moniker</label>
		<input asp-for="Course.Moniker" class="form-control" />
		<span class="text-danger" asp-validation-for="Course.Moniker"></span>
	</div>
	<div class="form-group">
		<label asp-for="Course.ECTS"></label>
		<input asp-for="Course.ECTS" class="form-control"/>
		<span class="text-danger" asp-validation-for="Course.ECTS"></span>
	</div>
	<div class="form-group">
		<label asp-for="Course.HowEasy"></label>
		<input asp-for="Course.HowEasy" class="form-control" />
		<span class="text-danger" asp-validation-for="Course.HowEasy"></span>
	</div>
	<div class="form-group">
		<label asp-for="Course.InterestingLevel"></label>
		<input asp-for="Course.InterestingLevel" class="form-control" />
		<span class="text-danger" asp-validation-for="Course.InterestingLevel"></span>
	</div>

	<input type="hidden" asp-for="Course.Teacher.Id" />
	<div class="form-group">
		<label asp-for="Course.Teacher.FirstName">Teacher's first name</label>
		<input asp-for="Course.Teacher.FirstName" class="form-control" />
		<span class="text-danger" asp-validation-for="Course.Teacher.FirstName"></span>
	</div>
	<div class="form-group">
		<label asp-for="Course.Teacher.LastName">Teacher's last name</label>
		<input asp-for="Course.Teacher.LastName" class="form-control" />
		<span class="text-danger" asp-validation-for="Course.Teacher.LastName"></span>
	</div>
	<div class="form-group">
		<label asp-for="Course.Descriptions">Descriptions</label>
		<input asp-for="Course.Descriptions" class="form-control" />
		<span class="text-danger" asp-validation-for="Course.Descriptions"></span>
	</div>
	
	
	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-page="./List" class="btn btn-secondary">Cancel</a>
	
</form>